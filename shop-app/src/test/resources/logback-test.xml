<configuration>
    <!-- Other configurations for test logging -->

    <!-- Define an appender for test logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define a logger to use the test appender -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
